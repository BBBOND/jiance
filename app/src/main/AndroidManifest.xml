<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kim.jiance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="登陆"
            android:screenOrientation="portrait" />
        <activity
            android:name=".setting.SettingActivity"
            android:label="设置"
            android:screenOrientation="portrait" />
        <activity
            android:name=".units.UnitListActivity"
            android:label="单位列表"
            android:screenOrientation="portrait" />
        <activity
            android:name=".unit.UnitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".unit.event.EventInfoActivity"
            android:label="事件详情"
            android:screenOrientation="portrait" />
        <activity
            android:name=".unit.machine.MachineInfoActivity"
            android:label="设备详情"
            android:screenOrientation="portrait" />
    </application>
</manifest>
